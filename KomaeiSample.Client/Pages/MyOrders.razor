@page "/MyOrders"
<PageHeader Title="سفارش های من" Icon="@Icons.Material.Filled.LocalShipping" />

@if (NoDataMsg.Length > 0)
{
    <MudText Align="Align.Center" Class="mb-5 mt-10">@NoDataMsg</MudText>
}
else
{
    <MudHidden Breakpoint="Breakpoint.SmAndDown">
        <MudTabs Elevation="2" ApplyEffectsToContainer="true" PanelClass="py-6" Color="Color.Primary" Class="container px-1">
            @if (OrderDto.OrderOfficeDtos?.Length > 0)
            {
                <MudTabPanel Text="@CategoriesEnum.Office.GetDescription()">
                    <OrdersOffice OrderOfficeDtos="OrderDto.OrderOfficeDtos" HasAdminColumns="UserId != null"></OrdersOffice>
                </MudTabPanel>
            }
            @if (OrderDto.OrderHospitalDtos?.Length > 0)
            {
                <MudTabPanel Text="@CategoriesEnum.Hospital.GetDescription()">
                    <OrdersHospital OrderHospitalDtos="OrderDto.OrderHospitalDtos" HasAdminColumns="UserId != null"></OrdersHospital>
                </MudTabPanel>
            }
            @if (OrderDto.OrderHandBagDtos?.Length > 0)
            {
                <MudTabPanel Text="@CategoriesEnum.HandBag.GetDescription()">
                    <OrdersHandBag OrderHandBagDtos="OrderDto.OrderHandBagDtos" HasAdminColumns="UserId != null"></OrdersHandBag>
                </MudTabPanel>
            }
            @if (OrderDto.OrderConfidentialDtos?.Length > 0)
            {
                <MudTabPanel Text="@CategoriesEnum.Confidential.GetDescription()">
                    <OrdersConfidential OrderConfidentialDtos="OrderDto.OrderConfidentialDtos" HasAdminColumns="UserId != null"></OrdersConfidential>
                </MudTabPanel>
            }
        </MudTabs>
    </MudHidden>
    <MudHidden Breakpoint="Breakpoint.MdAndUp">
        <MudExpansionPanels Class="px-0">
            @if (OrderDto.OrderOfficeDtos?.Length > 0)
            {
                <MudExpansionPanel Text="@CategoriesEnum.Office.GetDescription()">
                    <OrdersOffice OrderOfficeDtos="OrderDto.OrderOfficeDtos" HasAdminColumns="UserId != null"></OrdersOffice>
                </MudExpansionPanel>
            }
            @if (OrderDto.OrderHospitalDtos?.Length > 0)
            {
                <MudExpansionPanel Text="@CategoriesEnum.Hospital.GetDescription()">
                    <OrdersHospital OrderHospitalDtos="OrderDto.OrderHospitalDtos" HasAdminColumns="UserId != null"></OrdersHospital>
                </MudExpansionPanel>
            }
            @if (OrderDto.OrderHandBagDtos?.Length > 0)
            {
                <MudExpansionPanel Text="@CategoriesEnum.HandBag.GetDescription()">
                    <OrdersHandBag OrderHandBagDtos="OrderDto.OrderHandBagDtos" HasAdminColumns="UserId != null"></OrdersHandBag>
                </MudExpansionPanel>
            }
            @if (OrderDto.OrderConfidentialDtos?.Length > 0)
            {
                <MudExpansionPanel Text="@CategoriesEnum.Confidential.GetDescription()">
                    <OrdersConfidential OrderConfidentialDtos="OrderDto.OrderConfidentialDtos" HasAdminColumns="UserId != null"></OrdersConfidential>
                </MudExpansionPanel>
            }
        </MudExpansionPanels>
    </MudHidden>
}

<style>
    .mud-expand-panel-header {
        background-color: #1E6060;
        color: white;
    }
</style>