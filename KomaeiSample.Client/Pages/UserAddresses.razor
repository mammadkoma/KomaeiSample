@if (UserAddressDtos.Length > 0)
{
    <MudGrid Justify="Justify.Center" Class="mt-1">
        <MudItem sm="12" xs="12">
            <MudDataGrid Items="UserAddressDtos" SortMode="SortMode.None" Bordered Hover Dense Striped Elevation="0" Class="container">
                <Columns>
                    <TemplateColumn Title="عملیات">
                        <CellTemplate>
                            <MudMenu Icon="@Icons.Material.Filled.MoreVert" Size="Size.Small">
                                <MudMenuItem IconColor="Color.Info" Icon="@Icons.Material.Filled.Edit" OnClick="@(() => OpenAddEditDialog(context.Item))">ویرایش &nbsp;&nbsp</MudMenuItem>
                                <MudMenuItem IconColor="Color.Error" Icon="@Icons.Material.Filled.Delete" OnClick="@(() => Delete(context.Item))">حذف &nbsp;&nbsp;</MudMenuItem>
                            </MudMenu>
                        </CellTemplate>
                    </TemplateColumn>
                    @if (SelectableMode)
                    {
                        <TemplateColumn Title="انتخاب">
                            <CellTemplate>
                                <MudButton Variant="Variant.Outlined" Color="Color.Tertiary" Size="Size.Small"
                                           OnClick="@(() => SelectAddress(context.Item))">
                                    انتخاب این آدرس
                                </MudButton>
                            </CellTemplate>
                        </TemplateColumn>
                    }
                    <PropertyColumn Property="x => x.Title" Title="عنوان" HeaderStyle="min-width:100px" />
                    <PropertyColumn Property="x => x.Address" Title="آدرس" HeaderStyle="min-width:400px" />
                </Columns>
            </MudDataGrid>
        </MudItem>
    </MudGrid>
}
else
{
    <MudText Align="Align.Center" Class="my-10">@NoDataMsg</MudText>
}

<MudGrid Justify="Justify.Center" Class="mb-3 mt-1">
    <MudItem>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" Size="Size.Small" OnClick="() => OpenAddEditDialog(null!)" title="Add">افزودن آدرس جدید</MudButton>
    </MudItem>
</MudGrid>