@page "/Orders"
@layout PanelLayout
<PageTitle>سفارش ها</PageTitle>

@if (NoDataMsg.Length > 0)
{
    <MudText Align="Align.Center" Class="mt-10">@NoDataMsg</MudText>
}
else
{
    <MudHidden Breakpoint="Breakpoint.SmAndDown">
        <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="py-6" Color="Color.Primary">
            @if (OrderDto.OrderOfficeDtos?.Length > 0)
            {
                <MudTabPanel Text="@CategoriesEnum.Office.GetDescription()">
                    <OrdersOffice OrderOfficeDtos="OrderDto.OrderOfficeDtos" HasAdminColumns="true"></OrdersOffice>
                </MudTabPanel>
            }
            @if (OrderDto.OrderHospitalDtos?.Length > 0)
            {
                <MudTabPanel Text="@CategoriesEnum.Hospital.GetDescription()">
                    <OrdersHospital OrderHospitalDtos="OrderDto.OrderHospitalDtos" HasAdminColumns="true"></OrdersHospital>
                </MudTabPanel>
            }
            @if (OrderDto.OrderHandBagDtos?.Length > 0)
            {
                <MudTabPanel Text="@CategoriesEnum.HandBag.GetDescription()">
                    <OrdersHandBag OrderHandBagDtos="OrderDto.OrderHandBagDtos" HasAdminColumns="true"></OrdersHandBag>
                </MudTabPanel>
            }
            @if (OrderDto.OrderConfidentialDtos?.Length > 0)
            {
                <MudTabPanel Text="@CategoriesEnum.Confidential.GetDescription()">
                    <OrdersConfidential OrderConfidentialDtos="OrderDto.OrderConfidentialDtos" HasAdminColumns="true"></OrdersConfidential>
                </MudTabPanel>
            }
        </MudTabs>
    </MudHidden>
    <MudHidden Breakpoint="Breakpoint.MdAndUp">
        <MudExpansionPanels>
            @if (OrderDto.OrderOfficeDtos?.Length > 0)
            {
                <MudExpansionPanel Text="@CategoriesEnum.Office.GetDescription()">
                    <OrdersOffice OrderOfficeDtos="OrderDto.OrderOfficeDtos" HasAdminColumns="true"></OrdersOffice>
                </MudExpansionPanel>
            }
            @if (OrderDto.OrderHospitalDtos?.Length > 0)
            {
                <MudExpansionPanel Text="@CategoriesEnum.Hospital.GetDescription()">
                    <OrdersHospital OrderHospitalDtos="OrderDto.OrderHospitalDtos" HasAdminColumns="true"></OrdersHospital>
                </MudExpansionPanel>
            }
            @if (OrderDto.OrderHandBagDtos?.Length > 0)
            {
                <MudExpansionPanel Text="@CategoriesEnum.HandBag.GetDescription()">
                    <OrdersHandBag OrderHandBagDtos="OrderDto.OrderHandBagDtos" HasAdminColumns="true"></OrdersHandBag>
                </MudExpansionPanel>
            }
            @if (OrderDto.OrderConfidentialDtos?.Length > 0)
            {
                <MudExpansionPanel Text="@CategoriesEnum.Confidential.GetDescription()">
                    <OrdersConfidential OrderConfidentialDtos="OrderDto.OrderConfidentialDtos" HasAdminColumns="true"></OrdersConfidential>
                </MudExpansionPanel>
            }
        </MudExpansionPanels>
    </MudHidden>
}

<style>
    .mud-expand-panel-header {
        background-color: #1E6060;
        color: white;
    }
</style>