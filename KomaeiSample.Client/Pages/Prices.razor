@page "/Prices"
<PageHeader Title="قیمت ها" Icon="@Icons.Material.Filled.PriceCheck" />

<MudGrid Class="mt-5">
    <MudItem sm="6" xs="12" Class="d-flex mt-6 justify-center">
        <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Mail" Color="Color.Primary" Class="w-75" OnClick="OpenPricesOfficeDialog">
            @CategoriesEnum.Office.GetDescription()
        </MudButton>
    </MudItem>
    <MudItem sm="6" xs="12" Class="d-flex mt-6 justify-center">
        <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.LocalHospital" Color="Color.Primary" Class="w-75" OnClick="OpenPricesHospitalDialog">
            @CategoriesEnum.Hospital.GetDescription()
        </MudButton>
    </MudItem>
    <MudItem sm="6" xs="12" Class="d-flex mt-6 justify-center">
        <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.LocalMall" Color="Color.Primary" Class="w-75" OnClick="OpenPricesHandBagDialog">
            @CategoriesEnum.HandBag.GetDescription()
        </MudButton>
    </MudItem>
    <MudItem sm="6" xs="12" Class="d-flex mt-6 justify-center">
        <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Lock" Color="Color.Primary" Class="w-75" OnClick="OpenPricesConfidentialDialog">
            @CategoriesEnum.Confidential.GetDescription()
        </MudButton>
    </MudItem>
</MudGrid>