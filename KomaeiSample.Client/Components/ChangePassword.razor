<MudGrid Justify="Justify.Center" Class="py-3">
    <MudItem sm="5" xs="12">
        <EditForm Model="@vm" OnValidSubmit="Submit">
            <DataAnnotationsValidator />
            <MudText>موبایل : @Mobile</MudText>
            <MudTextField Label="پسورد فعلی *" Placeholder="پسورد فعلی"
                          @bind-Value="vm!.CurrentPassword" Class="my-5" For="@(() => vm!.CurrentPassword)"
                          Variant="Variant.Outlined" OnlyValidateIfDirty="true" AutoFocus="true" dir="ltr" InputType="@PasswordInputType0" Adornment="Adornment.Start" AdornmentIcon="@PasswordIcon0" OnAdornmentClick="TogglePasswordVisibility0" />

            <MudTextField Label="پسورد جدید * " @bind-Value="vm!.NewPassword" Class="my-5" For="@(() => vm!.NewPassword)" Variant="Variant.Outlined" dir="ltr" MaxLength="20" OnlyValidateIfDirty Placeholder="طول حداقل 6 شامل حرف و عدد" InputType="@PasswordInputType1" Adornment="Adornment.Start" AdornmentIcon="@PasswordIcon1" OnAdornmentClick="TogglePasswordVisibility1" />

            <MudTextField Label="تکرار پسورد جدید * " @bind-Value="vm!.ConfirmNewPassword" Class="my-5" For="@(() => vm!.ConfirmNewPassword)" Variant="Variant.Outlined" dir="ltr" MaxLength="20" OnlyValidateIfDirty Placeholder="طول حداقل 6 شامل حرف و عدد" InputType="@PasswordInputType2" Adornment="Adornment.Start" AdornmentIcon="@PasswordIcon2" OnAdornmentClick="TogglePasswordVisibility2" />

            <MudGrid Justify="Justify.Center">
                <MudItem>
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" FullWidth="true" Size="Size.Large" Style="width:150px">
                        ذخیره
                    </MudButton>
                </MudItem>
            </MudGrid>
        </EditForm>
    </MudItem>
</MudGrid>
