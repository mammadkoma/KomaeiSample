<MudDialog Class="pe-3">
    <DialogContent>
        <MudStack Row AlignItems="AlignItems.Center">
            <MudIcon Icon="@Icons.Material.Filled.Warning" Color="Color.Warning" />
            <MudText Class="ms-2 py-1">@ContentText</MudText>
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Filled" Class="my-3">
            <MudText>@NoButtonText</MudText>
        </MudButton>
        <MudButton Color="@Color" Variant="Variant.Filled" OnClick="Submit" Class="ms-5 px-5">
            <MudText Class="px-2">@YesButtonText</MudText>
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public required string ContentText { get; set; }
    [Parameter] public required string YesButtonText { get; set; }
    [Parameter] public required string NoButtonText { get; set; }
    [Parameter] public Color Color { get; set; }

    private void Submit() => MudDialog.Close(DialogResult.Ok(true));
    private void Cancel() => MudDialog.Cancel();
}