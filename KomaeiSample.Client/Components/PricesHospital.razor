<MudDialog Class="text-center">
    <DialogContent>
        <MudAlert Severity="Severity.Normal" ContentAlignment="HorizontalAlignment.Center" Icon="@Icons.Material.Filled.LocalHospital" Class="mt-1">
            @CategoriesEnum.Hospital.GetDescription()
        </MudAlert>

        <MudDataGrid Items="EnvelopeHospitalDtos" Bordered Hover Dense Striped SortMode="SortMode.None" FixedHeader Height="@WindowHeight" Class="mt-1">
            <Columns>
                <PropertyColumn Property="x => x.ModelTitle" Title="مدل" />
                <PropertyColumn Property="x => x.HospitalTemplateTemplateName" Title="قالب" />
                <PropertyColumn Property="x => x.PaperTitle" Title="کاغذ" />
                <PropertyColumn Property="x => x.GrammageTitle" Title="گرماژ" />
                <PropertyColumn Property="x => x.CountTitle" Title="تعداد" />
                <PropertyColumn Property="x => x.CellophaneTitle" Title="سلفون" />
                <PropertyColumn Property="x => x.UvTitle" Title="یو وی" />
                <PropertyColumn Property="x => x.Price" Title="قیمت (ریال)" Format="#,0" />
            </Columns>
        </MudDataGrid>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" OnClick="DownloadPdf" StartIcon="@Icons.Material.Filled.CloudDownload" Class="mb-3 me-5">
            دانلود فایل pdf
        </MudButton>
    </DialogActions>
</MudDialog>